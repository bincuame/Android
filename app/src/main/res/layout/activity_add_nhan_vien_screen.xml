<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.AddNhanVienScreen"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Them Nhan Vien"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtMaNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nham Ma"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNameNhanVien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nham Ten"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtNamePhongBan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nham Phong Ban"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:id="@+id/btnThemNhanVien"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Them "
        android:backgroundTint="#2196F3"/>
</LinearLayout>