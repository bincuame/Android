<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgAvatarPhongBan"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/phongban"/>
        <TextView
            android:id="@+id/tvNamePhongBan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhan Su"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/imgDeletePhongBan"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/baseline_delete_24"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:id="@+id/imgCreatePhongBan"
        android:layout_below="@+id/imgDeletePhongBan"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/baseline_create_24"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>